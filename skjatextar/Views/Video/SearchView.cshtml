@model IEnumerable<skjatextar.Models.Video>
@{
    ViewBag.Title = "Myndefni";
}

<h2>SearchView</h2>

@using (Html.BeginForm("SearchView", "Video", @FormMethod.Get))
{
    <form>
        @Html.TextBox("LeitarStrengur", null, new { @class = "input-medium-search-query", @type = "Sláðu inn leitarstreng" })
        <input type="submit" value="Leita" />
    </form>
}
<div class="content-translations">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th> ID </th>
                <th> Name </th>
                <th> CategoryID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @item.ID</td>
                    <td> @item.Name </td>
                    <td> @item.CategoryID </td>
                </tr>
            }
        </tbody>
    </table>
</div>
