@model skjatextar.Models.Translation
@Styles.Render("~/Content/css")
@{
    ViewBag.Title = "Breyta skrá";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Text, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Text, new { @cols = "100", @rows = "30" })
                @Html.ValidationMessageFor(model => model.Text)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Vista" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Til baka", "ViewTranslation", "Home", new { id = Model.ID }, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


