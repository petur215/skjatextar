<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Skjátextar.is</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class = "login-field">
        <form class="form-signin" role="form">
            Notendanafn: <input type="email" class="form-control" placeholder="Email address" required autofocus>
            Lykilorð: <input type="password" class="form-control" placeholder="Password" required>
            <label class="checkbox">
                <input type="checkbox" value="remember-me"> Remember me
            </label>
            <div>
             @Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
            <button class ="logintakki" type="submit">Sign in</button>
            </div>
        </form>
    </div>
        <div class="navbar navbar-default">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Application name", "Index", "Home", null, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse navbar-responsive-collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Heim", "Index", "Home")</li>
                <li>@Html.ActionLink("Skjátextar", "Translations", "Home")</li>
                <li>@Html.ActionLink("Hlaða inn skrá", "LoadNewFile", "Home")</li>
                    <li>@Html.ActionLink("Fyrirspurnir", "Requests", "Home")</li>
                    <li>@Html.ActionLink("Reglur", "Rules", "Home")</li>
                    <li>@Html.Partial("_LoginPartial")</li>
            </ul>
                    <form class="navbar-form navbar-right">
                    <input type="text" class="form-control col-lg-8" placeholder="Search">
                </form>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Skjátextar.is</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
